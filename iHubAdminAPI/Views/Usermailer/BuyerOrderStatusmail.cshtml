
@{
    Layout = null;
    var orderdetails = ViewBag.OrderDetails as iHubAdminAPI.Models.VMPagingResultsPost;
    var imgpath = System.Configuration.ConfigurationManager.AppSettings["ImgPath"].ToString();
    var Prdctimgspath = System.Configuration.ConfigurationManager.AppSettings["Prdctimgspath"].ToString();
    string Status = "";
    if (orderdetails.Status == 20)
    {
        Status = "Packed";
    }
    else if (orderdetails.Status == 30)
    {
        Status = "Dispatched";
    }
    else if (orderdetails.Status == 50)
    {
        Status = "Delivered";
    }
    else if (orderdetails.Status == 60)
    {
        Status = "Cancelled";
    }
    else if (orderdetails.Status == 80)
    {
        Status = "Reached to store";
    }
    else if (orderdetails.Status == 40)
    {
        Status = "Dispatched";
    }

}

